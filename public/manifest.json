{
    "manifest_version": 3,
    "name": "SSI Wallet Extension",
    "version": "0.0.1",
    "action": {
        "default_title": "SSI Wallet",
        "default_popup": "index.html"
    },
    "options_page": "options.html",
    "background": {
        "service_worker": "src/background/sw.js",
        "type": "module"
    },
    "icons": {
        "16": "icon16.png",
        "64": "icon64.png",
        "128": "icon128.png"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "http://*/*"
            ],
            "js": [
                "src/content/content.js"
            ],
            "run_at": "document_idle"
        }
    ]
}