{
    "manifest_version": 3,
    "name": "SSI Wallet Extension",
    "description": "A Svelte + TypeScript Chrome Extension (MV3) scaffold for an SSI wallet.",
    "version": "0.1.0",
    "icons": {
        "16": "icon16.png",
        "48": "icon64.png",
        "128": "icon128.png"
    },
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon16.png",
            "48": "icon64.png",
            "128": "icon128.png"
        }
    },
    "permissions": [
        "storage",
        "tabs"
    ],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    }
}