{
    "extends": "@tsconfig/svelte/tsconfig.json",
    "compilerOptions": {
        "target": "ESNext",
        "lib": [
            "DOM",
            "ESNext",
            "WebWorker"
        ],
        "moduleResolution": "node",
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "types": [
            "svelte",
            "chrome"
        ]
    },
    "include": [
        "src/**/*",
        "src/**/*.d.ts"
    ]
}